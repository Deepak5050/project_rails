<h1><%= @article.title %></h1>
<p>
TAGS: <% @article.tags.each do |tag| %>
	<%= link_to tag.name, tag_path(tag) %>
<% end %><br></br>
</p>
<p><%= image_tag @article.image.url %></p>
<p><%= @article.body %></p>
<br><br>

<br><br/>
<%= link_to "Edit", edit_article_path(@article) %> <span> | </span>

<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}%> <span> | </span>
<%= link_to "<< Back to Articles", articles_path %><br><br/>

<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>
<%= render partial: 'comments/form' %>
